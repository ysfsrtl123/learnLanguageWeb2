doctype html
html(lang="de")
  include ../views/includes/head.pug
  
  style.
    body {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
      background-color: red;
    }
    main {
      flex: 1;
    }
    footer {
      background-color: #ffc107;
      color: white;
    }
    a {
      text-decoration: none;
    }
    .hidden {
      display: none;
    }
    .spinner-container {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      background-color: rgba(255, 255, 255, 0.8);
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      z-index: 9999;
    }
    .carousel-container {
      display: flex;
      flex-direction: column;
      width: 100%;
    }

  body
    // Yükleme Spinnerı
    #spinner-container.spinner-container
      .spinner-border(role="status")
        span.visually-hidden Loading...

    // Ana İçerik
    block content
      include ../views/includes/nav.pug
      
      .container-fluid.my-1
        .row
          .col-auto.me-auto
            include ../views/includes/category.pug

          .col.mb-5.my-2
            #carouselExampleDark.carousel.carousel-dark.slide
              .carousel-indicators
                button(type="button", data-bs-target="#carouselExampleDark", data-bs-slide-to="0", class="active", aria-current="true", aria-label="Slide 1").bg-light
                button(type="button", data-bs-target="#carouselExampleDark", data-bs-slide-to="1", aria-label="Slide 2").bg-light
                button(type="button", data-bs-target="#carouselExampleDark", data-bs-slide-to="2", aria-label="Slide 3").bg-light
              
              .carousel-inner.rounded-4.bg-white
                .carousel-item.active(data-bs-interval="10000")
                  img(src='https://picsum.photos/900/600'  alt='First' class='d-block w-100')
                  .carousel-caption.d-none.d-md-block
                    h5.text-white First slide label
                    p.text-white Some representative placeholder content for the first slide.

                .carousel-item(data-bs-interval="2000")
                  img(src='https://picsum.photos/900/600' class='d-block w-100' alt='Second Slide')
                  .carousel-caption.d-none.d-md-block
                    h5.text-white Second slide label
                    p.text-white Some representative placeholder content for the second slide.

                .carousel-item
                  img(src='https://picsum.photos/900/600' class='d-block w-100' alt='Third Slide')
                  .carousel-caption.d-none.d-md-block
                    h5.text-white Third slide label
                    p.text.white Some representative placeholder content for the third slide.

      include ../views/includes/footer.pug

    script.
      document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('spinner-container').style.display = 'none';
      });

      function showSection(sectionId) {
        document.getElementById(sectionId).classList.remove('hidden');
      }
